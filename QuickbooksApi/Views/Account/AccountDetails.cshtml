@model QuickbooksWeb.Models.AccountModel

<div class="rol-md-8 ml-5 align-content-center">
    <h2>AccountDetails</h2>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("Id")
        </div>
        <div class="col-md-5">
            @Html.DisplayFor(m => Model.Id)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("Name")
        </div>
        <div class="col-md-5">
            @Html.DisplayFor(m => Model.Name)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("Account Type")
        </div>
        <div class="col-md-5">
            @Html.DisplayFor(m => Model.AccountType)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("Classification")
        </div>
        <div class="col-md-5">
            @Html.DisplayFor(m => Model.Classification)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("CurrentBalance")
        </div>
        <div class="col-md-5">
            <div class="col-md-5">
                @Html.DisplayFor(m => Model.CurrentBalance)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <input type="button" value="Back to Home" onclick="location.href='@Url.Action("Index", "Account")'" />
        </div>
    </div>
</div>
</div>

