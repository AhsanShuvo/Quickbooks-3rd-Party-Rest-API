@model QuickbooksWeb.Models.CustomerModel

<div class="col-md-8 ml-5 align-content-center">
    <h2>CustomerDetails</h2>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("Id")
        </div>
        <div class="col-md-5">
            @Html.DisplayFor(m => Model.Id)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("DisplayName")
        </div>
        <div class="col-md-5">
            @Html.DisplayFor(m => Model.DisplayName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("CompanyName")
        </div>
        <div class="col-md-5">
            @Html.DisplayFor(m => Model.CompanyName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("Balance")
        </div>
        <div class="col-md-5">
            @Html.DisplayFor(m => Model.Balance)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("Active")
        </div>
        <div class="col-md-5">
            @Html.DisplayFor(m => Model.Active)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("SyncToken")
        </div>
        <div class="col-md-5">
            @Html.DisplayFor(m => Model.SyncToken)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <input type="button" value="Back to Home"  onclick="location.href='@Url.Action("Index", "Customer")'"/>
        </div>
    </div>
</div>

