<div class="col-md-8 ml-5 align-content-center">
    <h2>DownloadPayment</h2>
    @using(Html.BeginForm("DownloadPayment", "Payment", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-3">
                @Html.Label("Payment Id")
            </div>
            <div class="col-md-5">
                <input type="text" name="id" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <input type="submit" value="Submit" />
            </div>
        </div>
    }
</div>


